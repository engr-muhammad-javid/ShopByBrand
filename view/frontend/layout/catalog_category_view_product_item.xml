<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.item.main">
            <block class="Magento\Framework\View\Element\Template"
                   name="product.item.brand"
                   template="Zeta_ShopByBrand::product/list_item_brand.phtml"
                   after="product.item.name">
                <arguments>
                    <argument name="view_model" xsi:type="object">Zeta\ShopByBrand\ViewModel\Brand</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
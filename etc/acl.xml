<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Zeta_Core::root" title="Zeta Modules" sortOrder="900">
                    <resource id="Zeta_ShopByBrand::main" title="Shop By Brand" sortOrder="20">
                        <resource id="Zeta_ShopByBrand::brand" title="Manage Brands" sortOrder="10">
                            <resource id="Zeta_ShopByBrand::brand_save" title="Save Brand" sortOrder="10"/>
                            <resource id="Zeta_ShopByBrand::brand_delete" title="Delete Brand" sortOrder="20"/>
                        </resource>
                        <resource id="Zeta_ShopByBrand::config" title="Configuration" sortOrder="20"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Zeta_ShopByBrand::shopbybrand_config" title="Shop By Brand Section"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>